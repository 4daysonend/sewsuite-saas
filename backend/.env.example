# Application
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3001

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=example_password
POSTGRES_DB=sewsuiteapp

# MongoDB
MONGODB_URI=mongodb://localhost:27017/sewsuiteapp

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# RabbitMQ
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# Bull Queue Configuration
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_PASSWORD=
QUEUE_REDIS_DB=1

# JWT Authentication
JWT_SECRET=replace_with_at_least_32_character_secret_key
JWT_EXPIRATION=24h
BCRYPT_SALT_ROUNDS=10

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# AWS/MinIO Configuration
AWS_ACCESS_KEY_ID=minio_access_key
AWS_SECRET_ACCESS_KEY=minio_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=sewsuite-uploads
S3_ENDPOINT=http://localhost:9000

# MinIO Ports
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# Nginx
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Email Service Configuration
EMAIL_SERVICE=smtp
EMAIL_USER=example@domain.com
EMAIL_PASSWORD=email_password
EMAIL_FROM=noreply@example.com

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf
MAX_FILES_PER_REQUEST=5

# Monitoring Configuration
ENABLE_MONITORING=true
METRICS_INTERVAL=60000
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_ITEMS=1000

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=logs/app.log

# AWS Secrets Manager (production only)
# DB_SECRET_ID=sewsuite-db-credentials
# AWS_SECRET_ID=sewsuite-app-secrets