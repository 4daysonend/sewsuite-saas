# API Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_API_VERSION=v1
REACT_APP_WEBSOCKET_URL=ws://localhost:5001

# Authentication
REACT_APP_AUTH_PROVIDER=local  # Options: local, auth0, cognito, firebase
REACT_APP_AUTH0_DOMAIN=your_auth0_domain
REACT_APP_AUTH0_CLIENT_ID=your_auth0_client_id
REACT_APP_AUTH0_AUDIENCE=https://api.sewsuite.com
REACT_APP_AUTH0_SCOPE="openid profile email"

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_CHAT=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_DARK_MODE=true

# Application Settings
REACT_APP_ENV=development
REACT_APP_APP_NAME=SewSuite
REACT_APP_SUPPORT_EMAIL=support@sewsuite.com
REACT_APP_MAX_FILE_UPLOAD_SIZE=10485760  # 10MB in bytes

# External Services - Public Keys Only (sensitive keys in .env.local)
REACT_APP_STRIPE_PUBLIC_KEY=pk_test_XXXXXXXXXXXXX
REACT_APP_MAPBOX_PUBLIC_TOKEN=pk.xxxxxx.xxxxxx

# Security Settings
REACT_APP_SESSION_TIMEOUT=3600000  # 1 hour in milliseconds
REACT_APP_IDLE_TIMEOUT=1800000     # 30 minutes in milliseconds

# Deployment Information
REACT_APP_VERSION=$npm_package_version
REACT_APP_BUILD_TIME=$BUILD_TIMESTAMP
